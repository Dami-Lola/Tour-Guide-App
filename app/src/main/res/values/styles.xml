<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CrystalTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">#00897B</item>
        <item name="colorPrimaryDark">#004D40</item>
        <item name="colorAccent">#E0F2F1</item>
        <item name="android:windowBackground">@color/crystalBackground</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

</resources>
